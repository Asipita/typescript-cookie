{
  "name": "ts-cookie",
  "version": "0.0.1",
  "description": "A simple, lightweight API for handling cookies in the browser",
  "module": "dist/js.cookie.mjs",
  "unpkg": "dist/js.cookie.min.mjs",
  "jsdelivr": "dist/js.cookie.min.mjs",
  "exports": {
    "import": "./dist/js.cookie.mjs"
  },
  "directories": {
    "test": "test"
  },
  "keywords": [
    "cookie",
    "cookies",
    "browser",
    "client"
  ],
  "scripts": {
    "pretest": "npm run build",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --ci",
    "lint": "npx standard && npx ts-standard",
    "format": "npx prettier -l --write --single-quote --no-semi '**/*.{html,js,json,md,mjs,ts,yml}' && npx standard --fix && npx ts-standard --fix",
    "build": "rm -rf dist/* && rollup -c",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:carhartl/ts-cookie.git"
  },
  "files": [
    "index.js",
    "dist/**/*"
  ],
  "author": "Klaus Hartl",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.3",
    "eslint": "^7.30.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-markdown": "^2.2.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "release-it": "^14.10.0",
    "rollup": "^2.53.2",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-license": "^2.5.0",
    "rollup-plugin-terser": "^7.0.2",
    "standard": "^16.0.3",
    "ts-node": "^10.1.0",
    "ts-standard": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=14"
  }
}
